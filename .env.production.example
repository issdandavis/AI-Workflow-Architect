# AI Workflow Architect - Production Environment Variables
# Copy this to .env and fill in your values

# ============================================
# REQUIRED
# ============================================

# Session secret (min 32 characters, generate with: openssl rand -base64 32)
SESSION_SECRET=

# Your production domain
APP_ORIGIN=https://your-domain.com

# PostgreSQL password (used by docker-compose)
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=ai_workflow

# ============================================
# AI PROVIDERS (add the ones you use)
# ============================================

OPENAI_API_KEY=
ANTHROPIC_API_KEY=
XAI_API_KEY=
PERPLEXITY_API_KEY=

# ============================================
# INTEGRATIONS (optional)
# ============================================

GITHUB_TOKEN=
GOOGLE_DRIVE_CLIENT_ID=
GOOGLE_DRIVE_CLIENT_SECRET=
DROPBOX_ACCESS_TOKEN=
NOTION_TOKEN=

# ============================================
# DEPLOYMENT OPTIONS
# ============================================

# Port (default: 5000)
PORT=5000
